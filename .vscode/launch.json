{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/reverse/cpp/reverse_k_group_with_constraints.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/linked_list/reverse/cpp",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C++: g++ build reverse k group"
        },
        {
            "name": "Rust Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/merge/rust/target/debug/main.exe",
            "args": [],
            "cwd": "${workspaceFolder}/linked_list/merge/rust",
            "stopOnEntry": false,
            "preLaunchTask": "Rust: cargo build merge k group"
        },
        {
            "name": "Go Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/linked_list/reverse/go",
            "cwd": "${workspaceFolder}/linked_list/reverse/go",
            "env": {},
            "args": [],
            "showLog": true
        },
        {
            "name": "Python Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/reverse/python/reverse_k_group_with_constraints.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/linked_list/reverse/python",
            "python": "D:\\python\\python.exe"
        },
        {
            "name": "TypeScript Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/reverse/typescript/dist/reverse_k_group_with_constraints.js",
            "cwd": "${workspaceFolder}/linked_list/reverse/typescript",
            "args": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "TypeScript: tsc build reverse k group",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/linked_list/reverse/typescript/dist/**/*.js"
            ]
        },
        {
            "name": "TypeScript Debug (ts-node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/reverse/typescript/reverse_k_group_with_constraints.ts",
            "cwd": "${workspaceFolder}/linked_list/reverse/typescript",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/linked_list/reverse/typescript/tsconfig.json"
            },
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "lua",
            "request": "launch",
            "tag": "independent_file",
            "name": "LuaPanda-IndependentFile",
            "description": "独立文件调试模式,使用前请参考文档",
            "luaPath": "",
            "packagePath": [],
            "luaFileExtension": "",
            "connectionPort": 8820,
            "stopOnEntry": true,
            "useCHook": true
        },
        // ----------------- MERGE MODULE DEBUG -----------------
        {
            "name": "C++ Debug (merge)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/merge/cpp/merge_k_sorted_lists.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/linked_list/merge/cpp",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "logging": { "engineLogging": true, "trace": true, "traceResponse": true },
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C++: g++ build merge k sorted lists"
        },
        {
            "name": "Rust Debug (merge)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/merge/rust/target/debug/merge_k_sorted_lists.exe",
            "args": [],
            "cwd": "${workspaceFolder}/linked_list/merge/rust",
            "stopOnEntry": false,
            "preLaunchTask": "Rust: cargo build - merge"
        },
        {
            "name": "Go Debug (merge)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/linked_list/merge/go",
            "cwd": "${workspaceFolder}/linked_list/merge/go",
            "env": {},
            "args": [],
            "showLog": true
        },
        {
            "name": "Python Debug (merge)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/merge/python/merge_k_sorted_lists.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/linked_list/merge/python"
        },
        {
            "name": "TypeScript Debug (ts-node, merge)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/linked_list/merge/typescript/merge_k_sorted_lists.ts",
            "cwd": "${workspaceFolder}/linked_list/merge/typescript",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/linked_list/merge/typescript/tsconfig.json"
            },
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}